<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- JQuery -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/js/mdb.min.js"></script>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/css/mdb.min.css" rel="stylesheet">
    <title>Vocabby</title>
</head>
<body>
    <!--Main Navigation-->
<header>

    <nav class="navbar fixed-top navbar-expand-lg navbar-dark info-color-dark scrolling-navbar">
      <a class="navbar-brand" href="/"><strong>Vocabby</strong></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/practice">Practice <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/learn">Learn</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/genki">Genki</a>
          </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink-4" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-user"></i>Username</a>
              <div class="dropdown-menu dropdown-menu-right dropdown-info" aria-labelledby="navbarDropdownMenuLink-4">
                <a class="dropdown-item" href="/profile">My account</a>
                <a class="dropdown-item" href="/add_custom_data">Add More Words</a>
                <a class="dropdown-item" href="/Logout">Log out</a>
              </div>
            </li>
          </ul>
      </div>
    </nav>
    <!--Main layout-->

    <!-- Vocabulary Section -->
    <main class="mt-5 pt-5">
        <div class="container">

            <!--Section: Jumbotron-->
            <section class="card wow fadeIn" style="background-image: url(https://mdbootstrap.com/img/Photos/Others/gradient1.jpg);">
                <!-- Content -->
                <div class="card-body text-white text-center py-5 px-5 my-5">

                    <h1 class="mb-4">
                        <strong>Let's Practice Vocabulary</strong>
                    </h1>
                    <p>
                        <strong>Write the equivalent Japanese word for each English word</strong>
                    </p>
                    <br><br>
                    <h2 class="mb-4">
                        <strong><%= typeof eng_vocab_prompt == 'undefined'? 'Good Afternoon' : eng_vocab_prompt %></strong>
                    </h2>
                    <form id="vocab_form" action="/practice" method="POST" class="needs-validation container" >

                        <input class="form-control w-responsive text-center mx-auto p-3 mt-2" name="user_jpn_vocab" type="text" autocomplete="off" placeholder="Example: こんにちは">

                        <button type="submit" value="submit" class="btn btn-warning btn-rounded">Submit</button>
                    </form><br><br>
                    <p class="mb-4"><strong><%= typeof vocab_result_message == 'undefined'? '' : vocab_result_message %></strong></p>
                </div>
                <!-- Content -->
            </section>
            <!--Section: Jumbotron-->
        </div>
    <!-- Vocabulary Section End -->

    <hr class="my-5">

    <!-- Kanji Section -->
    <main class="mt-5 pt-5">
        <div class="container">
    
            <!--Section: Jumbotron-->
            <section class="card wow fadeIn" style="background-image: url(https://mdbootstrap.com/img/Photos/Others/gradient1.jpg);">
                <!-- Content -->
                <div class="card-body text-white text-center py-5 px-5 my-5">
    
                    <h1 class="mb-4">
                        <strong>Let's Practice Kanji</strong>
                    </h1>
                    <p>
                        <strong>Write the equivalent Japanese word with proper "on-yomi" and "kun-yomi" for the given Kanji </strong>
                    </p>
                    <br><br>
                    <h2 class="mb-4">
                        <strong><%= typeof jpn_kanji_prompt == 'undefined'? '時々' : jpn_kanji_prompt %></strong>
                    </h2>
                    <form action="/practice" method="POST" class="needs-validation container">
    
                        <input class="form-control w-responsive text-center mx-auto p-3 mt-2" name="user_jpn_kanji" id="anythingSearch" type="text" autocomplete="off" placeholder="Example: ときどき">
    
                        <button type="submit" class="btn btn-warning btn-rounded">Submit</button>
                    </form><br><br>
                    <h3 class="mb-4">
                        <strong><%= typeof vocab_result_message == 'undefined'? '' : vocab_result_message %></strong>
                    </h3>
                </div>
                <!-- Content -->
            </section>
            <!--Section: Jumbotron-->
        </div>
    </main>
    <!-- Kanji Section End -->
    <hr class="my-5">
    <script type="text/javascript" src="/public/script.js"></script>
</body>
</html>